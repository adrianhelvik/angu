doctype html

meta( charset = 'utf-8' )
style.
    .CropArea {
        margin-top: 100px;
        margin-left: 100px;
    }
    .CropArea-container {
        display: inline-block;
        position: relative;
    }
    .CropArea img {
        display: block;
    }
    .CropArea-left, .CropArea-right, .CropArea-top, .CropArea-bottom, .CropArea-handle {
        position: absolute;
        background-color: rgba( 256, 256, 256, 0.8 );
    }
    .CropArea-left, .CropArea-right {
        width: 3px;
    }
    .CropArea-top, .CropArea-bottom {
        height: 3px;
    }
    .CropArea-handle {
        z-index: 3;
    }
    .CropArea-shade {
        position: absolute;
        background-color: rgba( 256, 256, 256, 0.6 );
    }
    .CropArea-croppedArea {
        position: absolute;
        z-index: 2;
    }

div( ng-app = 'testApp' )
