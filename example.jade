doctype html

meta( charset = 'utf-8' )
style.
    * {
        font-family: sans-serif;
    }
    ._content {
        margin: 40px auto;
        width: 70%;
    }
    .CropArea {
    }
    .CropArea-container {
        display: inline-block;
        position: relative;
    }
    .CropArea img {
        display: block;
    }
    .CropArea-left, .CropArea-right, .CropArea-top, .CropArea-bottom, .CropArea-handle {
        position: absolute;
        background-color: rgba( 256, 256, 256, 0.8 );
    }
    .CropArea-left, .CropArea-right {
        width: 3px;
    }
    .CropArea-top, .CropArea-bottom {
        height: 3px;
    }
    .CropArea-handle {
        z-index: 3;
    }
    .CropArea-shade {
        position: absolute;
        background-color: rgba( 256, 256, 256, 0.6 );
    }
    .CropArea-croppedArea {
        position: absolute;
        z-index: 2;
    }

div( class = '_content' ng-app = 'testApp' )
    div( ng-controller = 'ctrl as vm' )
        
        div
            h1 Get scope variables from crop-area
            p x: {{ vm.x }}
            p y: {{Â vm.y }}
            p height: {{ vm.height }}
            p width: {{ vm.width }}
            crop-area(
                bound-x = 'vm.x',
                bound-y = 'vm.y',
                bound-width = 'vm.width',
                bound-height = 'vm.height',
                default-width = '400px',
                default-height = '200px'
            )
                img( src = 'http://goo.gl/DDJgk6' )
        
        div
            h1 Select a cropping area with an aspect ratio
            p Pixel units are used for when no unit is specified
            crop-area(
                handle-size = '40px',
                border-width = '2px',
                aspect-ratio = '2.3',
                default-width = '400px'
            )
                img( src = 'http://goo.gl/DDJgk6' )
        
        div
            h1 Select a cropping area with an aspect ratio
            crop-area(
                aspect-ratio = '0.6'
            )
                img( src = 'http://goo.gl/DDJgk6' )
            

script( src = 'https://code.angularjs.org/1.4.8/angular.js' )
script( src = 'crop-area.js' )
script.
    angular.module( 'testApp', [ 'cropArea' ] )

    angular.module( 'testApp' ).controller( 'ctrl', function ( $scope ) {
        this.x;
        this.y;
        this.width;
        this.height;
    } );

